    <script>
        // Simple script to generate some random bars for the chart
        const chartArea = document.getElementById('chartArea');
        for (let i = 0; i < 24; i++) {
            const bar = document.createElement('div');
            bar.classList.add('chart-bar');
            // Random height between 70% and 98%
            bar.style.height = `${Math.random() * (98 - 70) + 70}%`;
            bar.title = `Hour ${i+1}`;
            chartArea.appendChild(bar);
        }
    </script>
